apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    server: https://<%= @apiserver_host %>:6443
    certificate-authority-data: <%= Base64.strict_encode64 @ca_crt %>
users:
- name: kubelet
  user:
    client-certificate-data: <%= Base64.strict_encode64 @client_crt %>
    client-key-data: <%= Base64.strict_encode64 @client_key %>
contexts:
- context:
    cluster: local
    user: kubelet